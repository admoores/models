  polyhedron([
    [l1 / -2, 0, 0],
    [l1 / 2, 0, 0],
    [l2 / 2, 0, h],
    [l2 / -2, 0, h],
    [l1 / -2, d, 0],
    [l1 / 2, d, 0],
    [l2 / 2, d, h],
    [l2 / -2, d, h]
  ], [
    [0, 3, 2, 1],
    [4, 5, 6, 7],
    [1, 2, 6, 5],
    [2, 3, 7, 6],
    [0, 4, 7, 3],
    [0, 1, 5, 4]
  ]);
}